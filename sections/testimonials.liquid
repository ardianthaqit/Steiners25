{%- assign img_class = 'w-28 md:w-40 mx-auto' -%}
{%- assign col_class = 'flex-grow ' -%}
<div class="w-full mt-20 py-40" style="background-color:{{ section.settings.bgcolor }};">
    <div class="max-w-1312 mx-auto w-11/12">
        {% if section.settings.title != blank %}
        <div class="mt-5 font-headline lg:text-left text-center leading-tight font-bold lg:text-44 text-32">
          {{ section.settings.title }}
        </div>
      {% endif %}
    </div>
  <div class="pt-10 xl:max-w-60 max-w-full w-11/12 mx-auto
              px-10 xl:px-0
              sm:grid block grid-cols-2 md:flex
              lg:gap-x-40 gap-x-4 gap-y-10 md:space-x-5">
      {% for block in section.blocks %}
        {% if block.settings.image  != blank %}
          <div class="{{ col_class }} w-full text-left sm:py-0 py-10">
              <div class="inline-flex">
                {{ block.settings.image| img_url: 'master'| img_tag: block.settings.icon.alt}}
              </div>
              {% if block.settings.description != blank %}
              <div class="font-normal	 text-darkgrey text-16 pt-5 max-w-70">
                {{ block.settings.description }}
              </div>
              {% endif %}
              {% if block.settings.author != blank %}
              <div class="font-normal text-darkdark text-16 pt-5">
                {{ block.settings.author }}
              </div>
              {% endif %}
          </div>
        {% endif %}
      {% endfor %}
  </div>
</div>


{% schema %}
{
  "name":"Testimonails",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
        "type": "color",
        "id": "bgcolor",
        "label": "Background Color"
      }
  ],
  "blocks": [
    { 
      "type": "icon",
      "name": "Icon",  
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
            "type": "richtext",
            "id": "author",
            "label": "Name of Author"
          }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonails",
      "category": "Content"
    }
  ]
}
{% endschema %}